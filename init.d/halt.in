depend()
{
	after *
	use romount
}

start()
{
	case "${RUNLEVEL}" in
		0) runlevel=shutdown;;
		6) runlevel=reboot;;
		*) eerror "Unknown runlevel ${RUNLEVEL}"; return 1
	esac

	. /etc/init.d/"${runlevel}".sh
	return 0
}
