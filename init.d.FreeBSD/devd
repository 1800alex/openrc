#!/sbin/runscript
# Copyright 2007-2008 Roy Marples
# All rights reserved

command=/sbin/devd
command_args=${devd_args}
name="Device State Change Daemon"

depend() {
	need localmount
	after bootmisc
	before net.lo0
}

start_pre() {
    sysctl hw.bus.devctl_disable=0 >/dev/null
}

stop_post() {
    sysctl hw.bus.devctl_disable=1 >/dev/null
}
