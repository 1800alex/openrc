command=@PREFIX@%%/bin/dbus-daemon
pidfile=@VARBASE@/run/dbus/dbus.pid
command_args="${dbusd_args---system}"
name="Message Bus Daemon"

depend()
{
	need localmount net
	after bootmisc
}

start_pre()
{
    mkdir -p $(dirname $pidfile)
}
