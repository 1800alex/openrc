command=/usr/sbin/syslogd
command_args=${syslogd_args}
pidfile=$(strings ${command} | grep /var/run/syslog)
name="System Logger Daemon"

depend()
{
	provide logger
	use net
	need localmount
	after bootmisc newsyslog
}
